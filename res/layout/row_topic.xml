<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/topicCardSpacing"
    app:cardElevation="@dimen/defaultCardElevation"
    app:cardCornerRadius="@dimen/defaultCardCornerRadius">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <ImageView
            android:id="@+id/icon_image_topic_row"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/topicIcon"/>

        <TextView
            android:id="@+id/titleandnumberofreplys_text_text_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/icon_image_topic_row"
            android:breakStrategy="simple"/>

        <TextView
            android:id="@+id/author_text_topic_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:layout_toEndOf="@+id/icon_image_topic_row"
            android:layout_below="@+id/titleandnumberofreplys_text_text_row"/>

        <TextView
            android:id="@+id/dateoflastreply_text_topic_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/titleandnumberofreplys_text_text_row"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
