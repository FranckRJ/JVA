<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="6dp">
    <TextView
        android:id="@+id/firstpage_button_header_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_alignParentStart="true"
        android:text="@string/one"/>
    <TextView
        android:id="@+id/previouspage_button_header_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/currentpage_button_header_row"
        android:text="@string/previousPageText"/>
    <TextView
        android:id="@+id/currentpage_button_header_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:text="@string/waitingText"/>
    <TextView
        android:id="@+id/nextpage_button_header_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/currentpage_button_header_row"
        android:text="@string/nextPageText"/>
    <TextView
        android:id="@+id/lastpage_button_header_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
